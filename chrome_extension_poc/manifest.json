{
  "manifest_version": 2,
  "name": "Binge Party Beta",
  "version": "0.5.0",
  "version_name": "0.5 beta",
  "description": "Social streaming for quarantine",
  "permissions": ["activeTab", "declarativeContent"],
  "content_security_policy": "script-src 'self' https://cdn4.mxpnl.com/libs/mixpanel-2-latest.min.js https://cdn.rollbar.com/rollbarjs/refs/tags/v2.16.2/rollbar.min.js; object-src 'self'",
  "web_accessible_resources": ["lib/css/*.css", "images/logo_square.png"],
  "background": {
    "scripts": ["lib/mixpanel.js", "lib/rollbar.js", "background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    },
    "default_title": "Start a Binge Party session"
  },
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*", "https://www.youtube.com/*"],
      "js": [
        "lib/peerjs.min.js",
        "lib/materialize.min.js",
        "room.js",
        "view.js",
        "videoPlayer.js",
        "contentScript.js"
      ],
      "css": ["lib/css/main.css"]
    }
  ]
}
