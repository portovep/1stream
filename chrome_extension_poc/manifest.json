{
  "name": "BingeParty",
  "version": "1.0",
  "description": "Social watching for everybody",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "webNavigation",
    "tabs",
    "https://*/"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/watch/*",
        "https://www.primevideo.com/detail/*",
        "https://www.youtube.com/watch*"
      ],
      "js": ["lib/peerjs.min.js", "room.js", "contentScript.js"]
    }
  ]
}
